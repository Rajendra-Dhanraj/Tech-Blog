{{!-- Display post  --}}

<ol class="post-list">
    <li>
        <article class="post">
            <div class="title">
                <h2>{{post.title}}</h2><span>{{post.user.username}} on {{post.created_at}}</span>

            </div>
            <div class="meta">
                {{post.post_text}}

                |
                <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
</ol>

{{!-- Comment box --}}

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Submit</button>
    </div>
</form>

{{!-- Loop through and display all comments --}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

<script src="/javascript/comment.js"></script>

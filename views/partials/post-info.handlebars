<article class="post">
    <div class="title">
        <h2>{{title}}</h2><span>{{user.username}} on {{format_date created_at}}</span>

    </div>
    <div class="meta">
        {{post_text}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>

    </div>
</article>